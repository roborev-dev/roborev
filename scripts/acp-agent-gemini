#!/usr/bin/env sh
set -eu

if command -v gemini >/dev/null 2>&1; then
	exec gemini --experimental-acp "$@"
fi

cat >&2 <<'EOF'
error: no Gemini ACP command was found.

Checked:
  1. gemini --experimental-acp on PATH

Fix options:
  - Install it:
      npm install -g @google/gemini-cli
  - Then rerun: make test-acp-integration-gemini
  - Or override directly:
      make test-acp-integration ACP_TEST_COMMAND=/path/to/your/acp-wrapper
  - Or set:
      export ROBOREV_ACP_ADAPTER_COMMAND=/path/to/your/acp-wrapper
EOF

exit 127
